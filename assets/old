<script>
function loadAdsR(ids,w,pdv){
var adParad = document.createElement('script');
var adDdivbxd = document.createElement('div');
adDdivbxd.id = ids;
adDdivbxd.style='min-width: "'+w+'"px; min-height: 600px;'
var ad = 'googletag.cmd.push(function() { googletag.display("'+ids+'"); });';
var td = document.createTextNode(ad);
adParad.appendChild(td);
adDdivbxd.appendChild(adParad);
document.getElementById(pdv).appendChild(adDdivbxd);
}
</script>
